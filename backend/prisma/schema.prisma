generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    UserID Int @id @default(autoincrement())
    Firstname String
    Lastname String
    Email String @unique
    Phone String
    Password String
    UserType UserType
    Customer Customer?
    Supplier Supplier?
    Transporter Transporter?
  }

model Customer {
    CustomerID Int @id @default(autoincrement())
    UserID Int @unique
    User User @relation(fields : [UserID], references:[UserID])
  }

model Supplier {
    SupplierId Int @id @default(autoincrement())
    CompanyName String
    UserID Int @unique
    User User @relation(fields : [UserID], references : [UserID])
  }

model Transporter {
    TransporterId Int @id @default(autoincrement())
    CompanyName String
    ChargePerKm Float
    UserID Int @unique
    User User @relation(fields:[UserID], references:[UserID])
  }

enum UserType {
    CUSTOMER
    SUPPLIER
    TRANSPORTER
  }
